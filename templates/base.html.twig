<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/> {% block stylesheets %}{% endblock %}
        </head>
        <body>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{ path('home') }}">Symfony</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('custom', {name: 'Ahmed'}) }}">Great Ahmed</a>
                        </li>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item float-right">
                                <a class="nav-link" href="{{ path('post.index') }}">Posts</a>
                            </li>
                            <li class="nav-item float-right">
                                <a class="nav-link" href="{{ path('post.create') }}">Create</a>
                            </li>
                            <li class="nav-item float-right">
                                <a class="nav-link" href="{{ path('app_logout') }}">Lgout</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>

            <div class="container-fluid"> {% block body %}{% endblock %}
                </div>
                {% block javascripts %}{% endblock %}
            </body>
        </html>
